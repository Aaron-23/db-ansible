! Configuration File for keepalived

global_defs {
   router_id MYSQL
   }
vrrp_script check_mysql {
   script "/etc/keepalived/check_mysql.sh"
    interval 3
      }
vrrp_instance VI_1 {
       state BACKUP
       interface eth0
       virtual_router_id 51
       priority 70
       nopreempt
       advert_int 1
       authentication {
           auth_type PASS
           auth_pass 2222
       }
virtual_ipaddress {
           192.168.2.99
       }
track_script {
       check_mysql
       }
   }
